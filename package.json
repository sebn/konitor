{
  "name": "konitor",
  "version": "0.1.1",
  "description": "The command-line tool for monitoring konnectors",
  "main": "./dist",
  "bin": "./bin/konitor.js",
  "files": ["bin", "dist"],
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "babel src -d dist --copy-files --ignore '**/*.spec.js'",
    "precommit": "pretty-quick --staged",
    "format": "prettier --write '**/*.{js,json}'",
    "start": "babel-node src/index.js",
    "test": "jest"
  },
  "author": "Simon Constans <simonc@linux.com>",
  "license": "MIT",
  "babel": {
    "presets": [["env", { "targets": { "node": "6.10" } }]],
    "plugins": ["transform-object-rest-spread"]
  },
  "jest": {
    "testMatch": ["**/?(*.)spec.js"]
  },
  "prettier": {
    "semi": false
  },
  "renovate": {
    "extends": ["config:base"]
  },
  "dependencies": {
    "@octokit/rest": "14.0.8",
    "chalk": "2.3.0",
    "clear": "0.0.1",
    "clui": "0.3.6",
    "configstore": "3.1.1",
    "figlet": "1.2.0",
    "fs-extra": "5.0.0",
    "inquirer": "5.0.1",
    "lodash": "4.17.4",
    "mkdirp": "0.5.1",
    "simple-git": "1.89.0",
    "tty-table": "2.5.5",
    "yargs": "11.0.0"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-env": "1.6.1",
    "husky": "0.14.3",
    "jest": "22.1.4",
    "prettier": "1.10.2",
    "pretty-quick": "1.2.3"
  }
}
